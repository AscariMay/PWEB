// 1ª Forma - Usando um Construtor
function Aluno(RA, Nome) {
    this.RA = RA;
    this.Nome = Nome;
}

const Aluno1 = new Aluno('123456', 'Yumi Uchiha');



// 2ª Forma - Criando o Objeto de Forma Literal
const objAluno1 = {
    RA: '123456',
    Nome: 'Yumi Uchiha'
};
console.log();



// 3ª Forma - Usando Object.assign()
const objAluno1 = {};

const aluno1= Object.assign(objAluno1, { RA: '123456', Nome: 'Yumi Uchiha' });
console.log(aluno1);

// 4ª Forma- Usando Object.create()
const objAluno1 = { ra: '123456'};
const aluno = Object.create(objAluno1, {nome: {value: 'Yumi Uchiha'}});
console.log(aluno.ra); // 123456
console.log(aluno.nome); // Yumi Uchiha





<!DOCTYPE html>
<html>
<head>
    <title>Exemplo 1: Construtor</title>
</head>
<body>
    <h1>Exemplo 1: Construtor</h1>
    
    <script src="atividade11.js">
        function Aluno(RA, Nome) {
            this.RA = RA;
            this.Nome = Nome;
        }

        const Aluno1 = new Aluno('12345', 'Yumi Uchiha');

        document.write(`<p>RA: ${Aluno1.RA}</p>`);
        document.write(`<p>Nome: ${Aluno1.Nome}</p>`);
    </script>
</body>
</html>


